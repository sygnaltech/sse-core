{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
